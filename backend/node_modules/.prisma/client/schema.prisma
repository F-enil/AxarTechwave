generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  username      String?
  passwordHash  String
  emailVerified Boolean  @default(false)
  role          String   @default("customer") // customer, staff, admin
  twofaSecret   String?
  provider      String   @default("local") // local, google
  providerId    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  addresses      Address[]
  orders         Order[]
  cart           Cart?
  auditLogs      AuditLog[]
  reviews        Review[]
  wishlist       Wishlist?
  returnRequests ReturnRequest[]
  gstNumber      String?

  @@map("users")
}

model Address {
  id        Int     @id @default(autoincrement())
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
  name      String
  phone     String
  line1     String
  city      String
  state     String
  country   String
  pincode   String
  isDefault Boolean @default(false)

  @@map("addresses")
}

model Category {
  id        Int        @id @default(autoincrement())
  name      String
  slug      String     @unique
  parentId  Int?
  parent    Category?  @relation("CategoryToCategory", fields: [parentId], references: [id])
  children  Category[] @relation("CategoryToCategory")
  sortOrder Int        @default(0)
  products  Product[]

  @@map("categories")
}

model Product {
  id          Int       @id @default(autoincrement())
  title       String
  slug        String    @unique
  description String?
  taxClassId  String?
  hsnSac      String?
  brand       String?
  status      String    @default("draft") // draft, active, archived
  categoryId  Int?
  category    Category? @relation(fields: [categoryId], references: [id])

  variants      ProductVariant[]
  reviews       Review[]
  originCountry String?
  taxRate       Float            @default(18.0)
  cgst          Float            @default(0.0)
  sgst          Float            @default(0.0)
  igst          Float            @default(0.0)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  @@map("products")
}

model ProductVariant {
  id         Int     @id @default(autoincrement())
  productId  Int
  product    Product @relation(fields: [productId], references: [id])
  sku        String  @unique
  barcode    String?
  attributes Json? // e.g. { "color": "red", "size": "L" }
  weight     Float?
  dimensions Json? // { "l": 10, "w": 10, "h": 10 }
  status     String  @default("active")

  prices         Price[]
  inventory      InventoryLedger[]
  cartItems      CartItem[]
  orderItems     OrderItem[]
  wishlistItems  WishlistItem[]
  returnRequests ReturnRequest[]

  @@map("product_variants")
}

model Price {
  id             Int            @id @default(autoincrement())
  variantId      Int
  variant        ProductVariant @relation(fields: [variantId], references: [id])
  currency       String         @default("INR")
  basePrice      Decimal
  compareAtPrice Decimal?
  priceListId    String? // For future price lists

  @@map("prices")
}

model Cart {
  id         Int        @id @default(autoincrement())
  userId     Int?       @unique
  user       User?      @relation(fields: [userId], references: [id])
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  items      CartItem[]
  couponCode String?
  discount   Decimal?

  @@map("carts")
}

model CartItem {
  id        Int            @id @default(autoincrement())
  cartId    Int
  cart      Cart           @relation(fields: [cartId], references: [id])
  variantId Int
  variant   ProductVariant @relation(fields: [variantId], references: [id])
  quantity  Int

  @@map("cart_items")
}

model Order {
  id        Int      @id @default(autoincrement())
  customId  String?  @unique // e.g. ORD-20250101-0001
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id])
  status    String // created, paid, packed, shipped, delivered, returned, cancelled
  total     Decimal
  discount  Decimal  @default(0)
  currency  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items              OrderItem[]
  payments           Payment[]
  shipments          Shipment[]
  invoices           Invoice[]
  returnRequests     ReturnRequest[]
  shippingAddress    Json?
  taxDetails         Json?
  gstNumber          String?
  trackingId         String?
  courierCompanyName String?

  @@map("orders")
}

model OrderItem {
  id        Int            @id @default(autoincrement())
  orderId   Int
  order     Order          @relation(fields: [orderId], references: [id])
  variantId Int
  variant   ProductVariant @relation(fields: [variantId], references: [id])
  title     String
  sku       String
  price     Decimal
  quantity  Int

  @@map("order_items")
}

model Payment {
  id            Int      @id @default(autoincrement())
  orderId       Int
  order         Order    @relation(fields: [orderId], references: [id])
  provider      String // razorpay, stripe
  transactionId String?
  amount        Decimal
  currency      String
  status        String // pending, success, failed
  createdAt     DateTime @default(now())

  @@map("payments")
}

model Shipment {
  id             Int      @id @default(autoincrement())
  orderId        Int
  order          Order    @relation(fields: [orderId], references: [id])
  provider       String?
  trackingNumber String?
  courierName    String?
  trackingUrl    String?
  status         String
  createdAt      DateTime @default(now())

  @@map("shipments")
}

model Invoice {
  id        Int      @id @default(autoincrement())
  orderId   Int
  order     Order    @relation(fields: [orderId], references: [id])
  invoiceNo String   @unique // INV-25-26-0001
  url       String? // S3 URL
  createdAt DateTime @default(now())

  @@map("invoices")
}

model InventoryLedger {
  id        Int            @id @default(autoincrement())
  variantId Int
  variant   ProductVariant @relation(fields: [variantId], references: [id])
  location  String         @default("default")
  quantity  Int
  type      String // in, out, reserved
  reference String? // order_id, po_id
  createdAt DateTime       @default(now())

  @@map("inventory_ledger")
}

model Media {
  id        Int      @id @default(autoincrement())
  ownerType String // product, category, global
  ownerId   Int?
  kind      String // image, video
  s3Key     String
  alt       String?
  width     Int?
  height    Int?
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())

  @@map("media")
}

model CmsSettings {
  key   String @id
  value Json

  @@map("cms_settings")
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  actorId   Int?
  actor     User?    @relation(fields: [actorId], references: [id])
  action    String
  entity    String
  entityId  String?
  diff      Json?
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())

  @@map("audit_logs")
}

// --- New Models ---

model NewsletterSubscriber {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  @@map("newsletter_subscribers")
}

model Review {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  productId Int
  product   Product  @relation(fields: [productId], references: [id])
  rating    Int // 1 to 5
  comment   String?
  status    String   @default("published") // pending, published, rejected
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("reviews")
}

model Wishlist {
  id        Int            @id @default(autoincrement())
  userId    Int            @unique
  user      User           @relation(fields: [userId], references: [id])
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  items     WishlistItem[]

  @@map("wishlists")
}

model WishlistItem {
  id         Int            @id @default(autoincrement())
  wishlistId Int
  wishlist   Wishlist       @relation(fields: [wishlistId], references: [id])
  variantId  Int
  variant    ProductVariant @relation(fields: [variantId], references: [id])
  createdAt  DateTime       @default(now())

  @@unique([wishlistId, variantId])
  @@map("wishlist_items")
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String
  phone     String?
  subject   String
  message   String
  status    String   @default("new") // new, read, replied
  createdAt DateTime @default(now())

  @@map("contact_messages")
}

model Coupon {
  id        Int       @id @default(autoincrement())
  code      String    @unique
  type      String // 'fixed' or 'percent'
  value     Float
  expiry    DateTime?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())

  @@map("coupons")
}

model ReturnRequest {
  id        Int            @id @default(autoincrement())
  orderId   Int
  order     Order          @relation(fields: [orderId], references: [id])
  userId    Int
  user      User           @relation(fields: [userId], references: [id])
  variantId Int
  variant   ProductVariant @relation(fields: [variantId], references: [id])
  reason    String
  type      String // refund, replacement
  images    Json? // Array of strings (urls)
  status    String // requested, approved, rejected, pickup_scheduled, received, inspected, refunded, replaced
  adminNote String?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  pickup Pickup?
  refund Refund?

  @@map("return_requests")
}

model Pickup {
  id              Int           @id @default(autoincrement())
  returnRequestId Int           @unique
  returnRequest   ReturnRequest @relation(fields: [returnRequestId], references: [id])
  courierName     String
  trackingNumber  String
  pickupDate      DateTime?
  status          String // scheduled, picked_up, delivered_to_warehouse
  createdAt       DateTime      @default(now())

  @@map("pickups")
}

model Refund {
  id              Int           @id @default(autoincrement())
  returnRequestId Int           @unique
  returnRequest   ReturnRequest @relation(fields: [returnRequestId], references: [id])
  amount          Decimal
  method          String // original_source, bank_transfer
  transactionId   String?
  status          String // pending, processed, failed
  processedAt     DateTime?
  createdAt       DateTime      @default(now())

  @@map("refunds")
}
